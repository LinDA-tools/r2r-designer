<!-- Modal -->
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Data Source Configuration</h4>
    </div>
    <div class="modal-body">

      <div class="form-group">
        <label for="classnameInput" class="col-md-4 control-label">Data Source Name</label>
        <div id="classnameInput" class="col-md-8">
          <input type="text" class="form-control" {{bind-attr placeholder=name}} />
        </div>
        <hr />

        <label for="classnameInput" class="col-md-4 control-label">Driver Class Name</label>
        <div id="classnameInput" class="col-md-8">
          <input type="text" class="form-control" {{bind-attr placeholder=classname}} />
        </div>

        <label for="subprotocolInput" class="col-md-4 control-label">Protocol</label>
        <div id="subprotocolInput" class="col-md-8">
          <input type="text" class="form-control" {{bind-attr placeholder=subprotocol}} />
        </div>

        <label for="subnameInput" class="col-md-4 control-label">Subname</label>
        <div id="subnameInput" class="col-md-8">
          <input type="text" class="form-control" {{bind-attr placeholder=subname}} />
        </div>

        <label for="userInput" class="col-md-4 control-label">Username</label>
        <div id="userInput" class="col-md-8">
          <input type="text" class="form-control" {{bind-attr placeholder=username}} />
        </div>

        <label for="passwordInput" class="col-md-4 control-label">Password</label>
        <div id="passwordInput" class="col-md-8">
          <input type="password" class="form-control" {{bind-attr placeholder=password}} />
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary">Save</button>
    </div>
  </div>
</div>
